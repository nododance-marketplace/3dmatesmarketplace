generator client {
  provider = "prisma-client-js"
}

// To switch back to Postgres for production, change provider to "postgresql"
// and url to env("DATABASE_URL")
datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// ── NextAuth adapter models ──────────────────────────────────

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ── Core user model ──────────────────────────────────────────

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          String    @default("CUSTOMER")
  hasOnboarded  Boolean   @default(false)

  accounts        Account[]
  sessions        Session[]
  customerProfile CustomerProfile?
  providerProfile ProviderProfile?
  jobRequests     JobRequest[]
  jobResponses    JobResponse[]
  savedProviders  SavedProvider[]
  reviewsWritten  Review[]         @relation("ReviewsWritten")
  reviewsReceived Review[]         @relation("ReviewsReceivedByUser")
}

// ── Customer profile ─────────────────────────────────────────

model CustomerProfile {
  id          String   @id @default(cuid())
  userId      String   @unique
  displayName String
  bio         String?
  city        String   @default("Charlotte")
  photoUrl    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// ── Provider profile ─────────────────────────────────────────

model ProviderProfile {
  id                 String   @id @default(cuid())
  userId             String   @unique
  slug               String   @unique
  displayName        String
  headline           String?
  bio                String?
  city               String   @default("Charlotte")
  address            String?
  lat                Float?
  lng                Float?
  serviceRadiusMiles Int?     @default(15)

  materials    String @default("[]")
  processes    String @default("[]")
  capabilities String @default("[]")

  websiteUrl   String?
  instagramUrl String?
  contactEmail String?
  phone        String?

  status    String   @default("PENDING")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user            User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  portfolio       PortfolioImage[]
  responses       JobResponse[]
  receivedReviews Review[]         @relation("ReviewsReceived")
  savedBy         SavedProvider[]
}

// ── Portfolio images ─────────────────────────────────────────

model PortfolioImage {
  id         String   @id @default(cuid())
  providerId String
  imageUrl   String
  caption    String?
  sortOrder  Int      @default(0)
  createdAt  DateTime @default(now())

  provider ProviderProfile @relation(fields: [providerId], references: [id], onDelete: Cascade)
}

// ── Job requests ─────────────────────────────────────────────

model JobRequest {
  id                 String    @id @default(cuid())
  customerId         String
  title              String
  description        String
  category           String?
  materials          String    @default("[]")
  budgetMin          Int?
  budgetMax          Int?
  deadline           DateTime?
  city               String    @default("Charlotte")
  status             String    @default("OPEN")
  acceptedResponseId String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  customer  User          @relation(fields: [customerId], references: [id], onDelete: Cascade)
  responses JobResponse[]
  reviews   Review[]
}

// ── Job responses ────────────────────────────────────────────

model JobResponse {
  id             String   @id @default(cuid())
  jobId          String
  providerUserId String
  providerId     String?

  message        String
  estimatedPrice Int?
  turnaroundDays Int?
  status         String   @default("SENT")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  job          JobRequest       @relation(fields: [jobId], references: [id], onDelete: Cascade)
  providerUser User             @relation(fields: [providerUserId], references: [id], onDelete: Cascade)
  provider     ProviderProfile? @relation(fields: [providerId], references: [id])
}

// ── Saved / bookmarked providers ─────────────────────────────

model SavedProvider {
  id         String   @id @default(cuid())
  userId     String
  providerId String
  createdAt  DateTime @default(now())

  user     User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  provider ProviderProfile @relation(fields: [providerId], references: [id], onDelete: Cascade)

  @@unique([userId, providerId])
}

// ── Reviews ──────────────────────────────────────────────────

model Review {
  id           String   @id @default(cuid())
  jobId        String
  reviewerId   String
  revieweeId   String
  providerId   String?
  reviewerRole String
  rating       Int
  text         String?
  createdAt    DateTime @default(now())

  job      JobRequest       @relation(fields: [jobId], references: [id], onDelete: Cascade)
  reviewer User             @relation("ReviewsWritten", fields: [reviewerId], references: [id], onDelete: Cascade)
  reviewee User             @relation("ReviewsReceivedByUser", fields: [revieweeId], references: [id], onDelete: Cascade)
  provider ProviderProfile? @relation("ReviewsReceived", fields: [providerId], references: [id])

  @@unique([jobId, reviewerId, revieweeId])
}
